pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', credentialsId: 'github-credentials-id', url: 'https://github.com/dinesharivappagari/jenkins-cicd-app.git'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'  // Installing dependencies for the Node.js app
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'  // Run tests if available (Optional)
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(['jenkins-ssh-key']) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ubuntu@3.83.158.112 " 
                        cd /var/www/html/jenkins-app || mkdir -p /var/www/html/jenkins-app &&
                        git pull origin main || git clone https://github.com/your-username/jenkins-cicd-app.git /var/www/html/jenkins-app &&
                        cd /var/www/html/jenkins-app &&
                        npm install &&
                        pm2 restart server.js || pm2 start server.js --name jenkins-app
                        "
                    '''
                }
            }
        }
    }
}
